<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:EzFabric"
             x:Class="EzFabric.App">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
                <ResourceDictionary>
                    <Color x:Key="backColor1">#ff4f00</Color>
                    <Color x:Key="backColor2">#06af7b</Color>
                    <Color x:Key="backColor3">#ffffff</Color>
                    <Color x:Key="textColor">#ffffff</Color>
                    <x:Double x:Key="margin1">20</x:Double>
                    <x:Double x:Key="margin2">20,75, 75, 0 </x:Double>
                </ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
